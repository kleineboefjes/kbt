<div class="container" style="padding:1rem 0 2rem;">
  <h2 style="margin-bottom:.5rem;">Shop per collectie</h2>
  <div class="grid" style="grid-template-columns:repeat(4,minmax(0,1fr)); gap:1rem;">
    {% for block in section.blocks %}
      <a class="card" href="{{ block.settings.link | default: routes.collections_url }}" style="text-decoration:none; color:inherit; padding:1rem;">
        <div style="height:140px; border-radius:14px; background: {{ block.settings.bg | default: '#FFFFFF' }}; display:flex; align-items:center; justify-content:center; border:1px solid var(--border);">
          {% if block.settings.image %}
            <img src="{{ block.settings.image | image_url: width: 240 }}" alt="" style="max-height:120px;">
          {% else %}
            <span style="opacity:.6;">Afbeelding</span>
          {% endif %}
        </div>
        <div style="font-weight:700; margin-top:.5rem;">{{ block.settings.title }}</div>
        <div style="color:var(--muted); font-size:.9rem;">{{ block.settings.subtitle }}</div>
      </a>
    {% endfor %}
  </div>
</div>
{% schema %}
{
  "name":"Categorie tegels",
  "blocks":[
    {"type":"tile","name":"Tegel","settings":[
      {"type":"text","id":"title","label":"Titel","default":"Baby"},
      {"type":"text","id":"subtitle","label":"Subtitel","default":"0â€“2 jaar"},
      {"type":"image_picker","id":"image","label":"Afbeelding"},
      {"type":"url","id":"link","label":"Link"},
      {"type":"text","id":"bg","label":"Achtergrondkleur (hex)","default":"#B8DDE6"}
    ]}
  ],
  "presets":[{"name":"Categorie tegels"}]
}
{% endschema %}
